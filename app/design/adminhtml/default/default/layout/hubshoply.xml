    <adminhtml_hubshoply_iframe>
        <reference name="head">
            <action method="addCss">
                <name>hubshoply/custom.css</name>
            </action>
        </reference>
        <reference name="content">
            <block type="groove_hubshoply/adminhtml_hsframe" name="hubshoply_frame" template="hubshoply/iframe.phtml"/>
        </reference>
    </adminhtml_hubshoply_iframe>
    <adminhtml_system_config_edit>
        <reference name="head">
            <action method="addCss">
                <name>hubshoply/custom.css</name>
            </action>
        </reference>
    </adminhtml_system_config_edit>
</layout>