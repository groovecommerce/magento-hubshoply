<config>
    <modules>
        <Groove_Hubshoply>
            <version>0.1.5</version>
        </Groove_Hubshoply>
    </modules>
    <adminhtml>
        <layout>
            <updates>
                <groove_hubshoply>
                    <file>hubshoply.xml</file>
                </groove_hubshoply>
            </updates>
        </layout>
    </adminhtml>
    <global>
        <models>
            <groove_hubshoply>
                <class>Groove_Hubshoply_Model</class>
                <resourceModel>groove_hubshoply_resource</resourceModel>
            </groove_hubshoply>
            <groove_hubshoply_resource>
                <class>Groove_Hubshoply_Model_Resource</class>
                <entities>
                    <queueitem>
                        <table>hubshoply_queue</table>
                    </queueitem>
                    <token>
                        <table>hubshoply_token</table>
                    </token>
                    <abandonedcart>
                        <table>hubshoply_abandonedcart</table>
                    </abandonedcart>
                </entities>
            </groove_hubshoply_resource>
        </models>
        <blocks>
            <groove_hubshoply>
                <class>Groove_Hubshoply_Block</class>
            </groove_hubshoply>
        </blocks>
        <helpers>
            <groove_hubshoply>
                <class>Groove_Hubshoply_Helper</class>
            </groove_hubshoply>
        </helpers>
        <resources>
            <groove_hubshoply_setup>
                <setup>
                    <module>Groove_Hubshoply</module>
                </setup>
            </groove_hubshoply_setup>
        </resources>
        <events>
            <!-- Customer register-->
            <customer_register_success>
                <observers>
                    <groove_hubspot>
                        <class>Groove_Hubshoply_Model_Event</class>
                        <method>createAccount</method>
                    </groove_hubspot>
                </observers>
            </customer_register_success>
            <!-- Customer becomes a subscriber -->
            <newsletter_subscriber_save_commit_after>
                <observers>
                    <groove_hubspot>
                        <class>Groove_Hubshoply_Model_Event</class>
                        <method>createNewsletterAccount</method>
                    </groove_hubspot>
                </observers>
            </newsletter_subscriber_save_commit_after>
            <!-- New customer review-->
            <review_save_after>
                <observers>
                    <groove_hubspot>
                            <class>Groove_Hubshoply_Model_Event</class>
                            <method>createReview</method>
                    </groove_hubspot>
                </observers>
            </review_save_after>
            <!-- Order Creation and Updates Tracking -->
            <sales_order_save_before>
                <observers>
                    <groove_hubspot>
                        <class>Groove_Hubshoply_Model_Event</class>
                        <method>saveOrderBefore</method>
                    </groove_hubspot>
                </observers>
            </sales_order_save_before>
            <sales_order_save_after>
                <observers>
                    <groove_hubspot>
                        <class>Groove_Hubshoply_Model_Event</class>
                        <method>saveOrderAfter</method>
                    </groove_hubspot>
                </observers>
            </sales_order_save_after>
            <!-- Existing Customer Update -->
            <customer_save_after>
                <observers>
                    <groove_hubspot>
                        <class>Groove_Hubshoply_Model_Event</class>
                        <method>updateCustomer</method>
                    </groove_hubspot>
                </observers>
            </customer_save_after>
            <!-- Shipment Tracking  -->
            <sales_order_shipment_save_after>
                <observers>
                    <groove_hubspot>
                        <class>Groove_Hubshoply_Model_Event</class>
                        <method>saveShipment</method>
                    </groove_hubspot>
                </observers>
            </sales_order_shipment_save_after>
            <core_block_abstract_to_html_after>
                <observers>
                    <groove_hubspot>
                        <class>Groove_Hubshoply_Model_Event</class>
                        <method>insertJavascript</method>
                    </groove_hubspot>
                </observers>
            </core_block_abstract_to_html_after>
        </events>
    </global>
    <frontend>
        <routers>
            <hubshoply_endpoint>
                <!-- public endpoint for app to use -->
                <use>standard</use>
                <args>
                    <frontName>hubshoply</frontName>
                    <module>Groove_Hubshoply</module>
                </args>
            </hubshoply_endpoint>
        </routers>
    </frontend>
    <admin>
        <routers>
            <adminhtml>
                <args>
                    <modules>
                        <Groove_Hubshoply after="Mage_Adminhtml">Groove_Hubshoply_Adminhtml</Groove_Hubshoply>
                    </modules>
                </args>
            </adminhtml>
        </routers>
    </admin>
    <crontab>
        <jobs>
            <hubshoply_token_expire>
                <!-- every half hour, prune all expired tokens-->
                <schedule>
                    <cron_expr>*/30 * * * *</cron_expr>
                </schedule>
                <run>
                    <model>groove_hubshoply/cron::pruneExpiredTokens</model>
                </run>
            </hubshoply_token_expire>
            <hubshoply_queue_expire>
                <!-- daily, clear all 'stale' queue items -->
                <schedule>
                    <cron_expr>0 0 * * *</cron_expr>
                </schedule>
                <run>
                    <model>groove_hubshoply/cron::pruneStaleQueueitems</model>
                </run>
                <!-- using (roughly) a month as a placeholder until better definitions of "stale" are found -->
                <stale_length_in_days>30</stale_length_in_days>
            </hubshoply_queue_expire>
            <hubshoply_abandon_cart_scan>
                <!-- scan routinely, Magento cron usually runs on 5 minute intervals -->
                <schedule>
                    <cron_expr>*/5 * * * *</cron_expr>
                </schedule>
                <run>
                    <model>groove_hubshoply/cron::findAbandonCarts</model>
                </run>
                <!-- Eric proposed an hour means abandoned, can be changed -->
                <minutes_until_abandoned>60</minutes_until_abandoned>
            </hubshoply_abandon_cart_scan>
        </jobs>
    </crontab>
</config>