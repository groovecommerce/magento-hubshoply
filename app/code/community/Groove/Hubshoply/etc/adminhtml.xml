<config>
    <acl>
        <resources>
            <admin>
                <children>
                    <!-- System config permission-->
                    <system>
                        <children>
                            <config>
                                <children>
                                    <!-- Matches <section> name in system.xml -->
                                    <hs_opt>
                                        <title>HubShop.ly</title>
                                    </hs_opt>
                                </children>
                            </config>
                        </children>
                    </system>
                    <!-- Top Nav permission, for the <menu> item below -->
                    <groove_hubshoply translate="title" module="groove_hubshoply">
                        <title>HubShop.ly</title>
                    </groove_hubshoply>
                </children>
            </admin>
        </resources>
    </acl>
